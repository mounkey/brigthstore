<br>
<div class="container">
  <h3><strong><%= content_tag(:h3strong, "Categoria: #{@category.nombre}.") %></strong></h3>
</div>
<div class="container d-flex">
  <% if @wears.present? %>
    <div class="row">
    <% @wears.each do |wear| %>      
        <div class="col-2 col-md-2">
          <div class="card-body">
            <% if wear.photo.attached? %>
              <%= link_to cl_image_tag(wear.photo.key), wear_path(wear) %> 
            <% else %>
              <%= link_to image_tag("PNG.png"), wear_path(wear) %>
              <% end %>
          </div>
        </div>
        <% end %>
      </div>    
  <% end %>
</div>
<br>
<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      
      <% if user_signed_in? %>
        <% if current_user.admin? %>
          <%= link_to  "Volver", categories_path, class: "btn btn-sm botones" %>
          <%= link_to "Editar",  edit_category_path, class: "btn btn-sm botones ml-2" %>
          <%= link_to "Borrar", category_path, method: "delete", data: {confirm: "Â¿Estas seguro?"}, class: "btn btn-sm botones ml-2" %>
        <% else %>
        <% end %>
      <% else %> 
        <%= link_to  "Volver", root_path, class: "btn btn-sm botones" %>
      <% end %>
    </div>
  </div>
</div>
