<div class="container">
  <div class="row">
    <div class="col-12">
      <%= content_tag(:h1, "Categoría: #{@category.nombre}") %>
    </div>
  </div>

  <div class="row mt-3">
    <% if @wears.present? %>
      <% @wears.each do |wear| %>
        <div class="col-4">
          <%= wear.descripcion %>
        </div>
      <% end -%>
    <% end -%>
  </div>
</div>

<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <%= link_to  "Volver", categories_path, class: "btn btn-sm btn-primary" %>
      <%= link_to  "Editar",  edit_category_path, class: "btn btn-sm btn-dark ml-2" %>
      <%= link_to  "Borrar", category_path, method: "delete", data: {confirm: "¿Estas seguro?"}, class: "btn btn-sm btn-danger ml-2"%>
    </div>
  </div>
</div>
