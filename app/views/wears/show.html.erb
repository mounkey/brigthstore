<div class="container">
  <div class = "row cards">
    <div class = "col-12 col-sm-12">
      <h2><%= "#{@wear.marca.capitalize} - #{@wear.category.nombre}" %></h2>
    </div>
    <div class = "col-12 col-sm-6 col-lg-6">
    <div class="text-center" style="width: 400px; height:300px;"> 
      <% if @wear.photo.attached? %>
        <%= cl_image_tag(@wear.photo.key, width: 400, height:300 ) %>
      <% else %>
        <%= image_tag ("PNG.png"), width:120, height:40 %>
      <% end %>
    </div>
    </div>
    <div class = "col-12 col-sm-6 col-lg-6">
      <%= link_to "seguir comprando", wears_path, class: "btn botones" %> <%= link_to  "comprar", wears_path, class: "btn botones"  %>
      <p>
        <%= @wear.marca%> <br/>
        <%= @wear.talla%> <br/>
        <%= @wear.color%> <br/>
        <%= @wear.valor%> <br/>
        <%= @wear.category.nombre%><br/><br/>
        <%= @wear.descripcion%>
        <br/>
        <div class =" text-rigth">
            <%= link_to  "Modificar", edit_wear_path(@wear), class: "btn botones"%> <%= link_to  "Eliminar", wear_path(@wear), method: :delete, class: "btn botones" %>
        </div>
      </p>
    </div>
  </div>
</div>