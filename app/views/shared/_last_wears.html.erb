<div class="container">
  <h1> Ultimo ingresos </h1>
  <div class = "row">
  <% Wear.last(6).each do |w| %> 
    <div class = "col-6 col-md-2">
      <div class="card-trip">
        <div class = "img_cont">
          <% if w.photo.attached?%>
            <%= link_to cl_image_tag(w.photo.key, class:"img_card" ), wear_path(w) %>
          <%else%>
            <%= link_to image_tag("PNG.png"), wear_path(w), class:'img_card' %>
          <% end %>
        </div>
      <div class="card-trip-infos">
      <h2 class="card-trip-pricing"><%= w.valor%></h2>
        <div>
          <h2><%= "Marca: #{w.marca} " %></h2>
          <p><%= w.descripcion%></p>
        </div>
      
      </div>
      </div>
      </div>
  <% end %>
  </div>
</div>
<br/>