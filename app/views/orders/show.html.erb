<br/>
  <div class="container">
    <div class="row">
      <% Order.all.each do |order|%>
      <% order_items = OrderItem.find_by(order: order.id)%> 
      <br/>
      <% if(order_items != nil)%>
       <% OrderItem.all.each do |order_item| %>
      <div class="col-12 ">
        <div class="card-product_carrito">
         
            <% if(order_item.wear.photo.attached?) %>
              <%= cl_image_tag(order_item.wear.photo.key,class:"carrito_img") %>
            <% else %>

            <% end %>
            <div class="card-product-infos ">
              <div class = row>
                <div class="col-12 col-md-8 ">
                  <h4><b><%= order_item.wear.marca %></b></h4>
                  <h5><p><%= order_item.wear.descripcion %></p></h5>
                  <h5><p><%= order_item.wear.talla %></p></h5>
                  <small class="carrito_price"> <%= order_item.wear.valor %></small>
                </div>
                <div class="col-6 col-md-4 text-end">
                  <%= link_to image_tag("trash.png"), order_order_item_path(order_item), method: :delete %>
                </div>
                <div class = "container-fluid d-flex">
                  <div class= "minicard_cant ">
                    <%= link_to  "+", suma_path(order), class: "boton_carrito" %>
                  </div>
                  <div class= "minicard_cant ">
                    <%= order_items.cantidad %>
                  </div>
                  <div class= "minicard_cant ">
                    <%= link_to  "-", resta_path(), class: "boton_carrito" %>
                  </div>
                </div>
              </div>
            </div>
          </div> 
      </div>
        <% end %>
        <% else %>
            <h1>Carrito Vacio, compre algo </h1>            
        <% end %>  
        
      <% end %>
    </div>
  </div>
